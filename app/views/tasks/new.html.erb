<div class="foo-font mb-5">
  <h1>ポモタイマー</h1>
</div>
<div class="row foo-font justify-content-center">
  <div class="col-8">
    <%= form_with(model: @task, scope: @task, local: true) do |f| %>
      <%= f.label :name, "1.タスク名" %>
      <%= f.text_field :name, class:"mb-4" %>
      <%= f.label :task_time, "2.タスク時間(分)" %>
      <%= f.number_field :task_time, step: "1",  min: 1, max: 60, class:"mb-4" %>
      <%= f.label :rest_time, "3.休憩時間(分)" %>
      <%= f.number_field :rest_time, step: "1" , min: 1, max: 60, class:"mb-4"%>
      <%= f.label :set_number, "4.セット数（回）" %>
      <%= f.number_field :set_number, step: "1" , min: 1, max: 10, class:"mb-4"%>
      <%= f.submit "Task Strat", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
