<%= pie_chart @tasks.to_a.group_by(&:name).map { |name, tasks| [name, tasks.map { |task| task.set_number * task.task_time }.sum]}%>

<% @tasks.each do |task| %>
  <li class='tasks'>
    <p><%= task.name %></p>
    <p><%= task.task_time %>分</p>
    <p><%= task.set_number %>セット</p>
    <p>合計<%= task.task_time * task.set_number %>分</p>
  </li>
<% end %>
