<% provide(:title, @user.name) %>
<div class="row foo-font">
  <aside class="col-md-5">
    <section class="user_info mb-5">
      <h1>
        <% if @user.avatar.url %>
          <%= image_tag @user.avatar.url, size: 50%>
        <% else %>
          <%= image_tag 'default_user.png', size: 50%>
        <% end %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats mb-5">
      <%= render 'shared/stats' %>
    </section>
    <section class="button">
      <%= render 'follow_form' if user_signed_in? %>
    </section>
    <section class="calendar">
      <%= month_calendar do |date| %>
        <%= link_to "#{(date.day).to_s}", user_path(date: date) %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-7">
    <% if @tasks.any? %>
      <h2 class="m-5">タスク一覧</h2>
      <%= render 'shared/show_tasks' %>
    <% else %>
      <h2 class="m-5">作業していません</h2>
    <% end %>
  </div>
</div>
