<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="button">
    <%= render 'follow_form' if user_signed_in? %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @tasks.any? %>
      <ol class="tasks">
        <%= render 'shared/show_tasks' %>
      </ol>
    <% else %>
      <p>今日のタスクはありません</p>
<% end %>
  </div>
</div>
