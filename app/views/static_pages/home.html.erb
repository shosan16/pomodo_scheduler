<% if user_signed_in? %>
  <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
      </aside>
      <div class="col-md-8">
        <h2>今日のタスク</h2>
        <% if @tasks.any? %>
          <ol class="tasks">
            <%= render 'shared/show_tasks' %>
          </ol>
        <% else %>
          <p>今日のタスクはありません</p>
        <% end %>
      </div>
    </div>
<% else %>
  <div class="center jumbotron">
     <h1>ようこそ <br>Pomodo Schedulerへ</h1>
  <%= link_to "アカウント作成", new_user_registration_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
