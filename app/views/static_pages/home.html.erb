<% if user_signed_in? %>
  <div class="row">
      <div class="col-md-12">
        <% if @tasks.any? %>
          <ol class="tasks">
            <%= render 'shared/show_tasks' %>
          </ol>
        <% else %>
          <p>今日のタスクはありません</p>
        <% end %>
      </div>
    </div>
<% else %>
<%= render 'layouts/home' %>
<% end %>
