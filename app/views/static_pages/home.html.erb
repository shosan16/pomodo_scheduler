<% if user_signed_in? %>
  <div class="row foo-font">
    <div class="col-5">
      <section class="user_info mb-5">
        <p>
          <% if @user.avatar.url %>
            <%= image_tag @user.avatar.url, size: 50%>
          <% else %>
            <%= image_tag 'default_user.png', size: 50%>
          <% end %>
          <%= @user.name %>
        </p>
      </section>
      <section class="stats mb-5">
        <%= render 'shared/stats' %>
      </section>
      <section class="button">
        <%= render 'users/follow_form' if user_signed_in? %>
      </section>
      <section>
        <%= month_calendar do |date| %>
          <%= link_to (date.day).to_s, root_path(date: date) %>
        <% end %>
      </section>
    </div>
    <div class="col-7 foo-font">
      <% if @tasks.any? %>
        <h2 class="m-5">タスク一覧</h2>
        <%= render 'shared/show_tasks' %>
      <% else %>
        <h2 class="m-5">作業していません</h2>
      <% end %>
    </div>
  </div>
<% else %>
  <%= render 'layouts/home' %>
<% end %>
